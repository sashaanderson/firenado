logging:
  level: INFO
  loggers:
    oasysledger: DEBUG
  appenders:
    - type: console
      target: stdout
    - type: file
      currentLogFilename: ./log/oasys-ledger-server.log
      archivedLogFilenamePattern: ./log/oasys-ledger-server.log.%d
      archivedFileCount: 100

server:
  type: simple
  rootPath: /api/
  applicationContextPath: /app
  adminContextPath: /admin
  connector:
    type: http
    port: 8081
  registerDefaultExceptionMappers: false
